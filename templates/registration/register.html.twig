{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="w-full h-[calc(100vh-6rem)] flex items-center justify-center">
        <div class="w-1/2 bg-slate-100 p-8 shadow-md rounded-lg">
            <h1 class="text-2xl text-center">Inscription</h1>
            {{ form_errors(registrationForm) }}
            {{ form_start(registrationForm) }}
            <div class="flex flex-col gap-2 mb-2 *:flex  *:flex-col [&>*:last-child]:flex-row [&>*:last-child]:gap-2 [&>div>input]:border-slate-500 [&>div>input]:border-[1px] [&>div>input]:rounded">
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.firstName) }}
                {{ form_row(registrationForm.lastName) }}
                {{ form_row(registrationForm.agreeTerms) }}
            </div>
            <button type="submit" class="bg-blue-600 rounded p-2 text-white w-full">Register</button>
            {{ form_end(registrationForm) }}

        </div>
    </div>
{% endblock %}
