{% extends 'base.html.twig' %}

{% block title %}Hello GeneratePdfController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <h1>{{ pdf.title }}</h1>
    <embed src="{{ asset(pdf.path) }}" type="application/pdf" width="100%" height="600px" />
    <p>Generated at: {{ pdf.createdAt|date('Y-m-d H:i:s') }}</p>
    <a href="{{ asset(pdf.path) }}" download>Download PDF</a>
{% endblock %}